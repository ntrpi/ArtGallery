@model ArtGallery.Models.ViewModels.ViewImage

@{
  ViewBag.Title = "Delete";
}

<main class="container body-content">
  <div class="clearing"></div>
  <h2 class="titleStyle">Image for @Model.pieceDto.pieceName</h2>
  <h3 class="h3Style">Are you sure you want to delete this image?</h3>

  <div class="detailsTable">
    <dl class="detailsTableDl">
      <dt>
        @Html.DisplayNameFor( model => model.imageDto.imageName )
      </dt>

      <dd>
        @Html.DisplayFor( model => model.imageDto.imageName )
      </dd>
    </dl>
  </div>

  <div class="imageDetailsParent" style="display: inline-block">
    <div class="imageDetails">
      @{
        var source = Model.imageDto.imagesPath + Model.imageDto.imageName + "." + Model.imageDto.imageExt;
      }
      <img src="@source" />
    </div>
    @using( Html.BeginForm( "Delete", "Images", new {
      id = Model.imageDto.imageId
    } ) ) {
      @Html.AntiForgeryToken()

      <div class="form-actions no-color">
        <div class="actionLinkDiv">
          <input type="submit" value="Delete" class="basicButton" />
          <span class="buttonAction">
            @Html.ActionLink( "Cancel", "Details", new {
                id = Model.imageDto.imageId
            } )
          </span>
        </div>
      </div>
    }
  </div>
  <div class="actionLinkDiv">
    @Html.ActionLink( "Back to Images List", "Index", new {
        id = Model.pieceDto.pieceId
    } ) |
    @Html.ActionLink( "Go to Piece", "../Pieces/Details", new {
        id = Model.pieceDto.pieceId
    } )
  </div>
</main>
