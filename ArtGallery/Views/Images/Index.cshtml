@model IEnumerable<ArtGallery.Models.Image>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Piece.pieceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageExt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isMainImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Piece.pieceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imageExt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isMainImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.imageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.imageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.imageId })
        </td>
    </tr>
}

</table>
