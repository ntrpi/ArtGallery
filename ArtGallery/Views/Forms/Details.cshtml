@model ArtGallery.Models.FormDto

@{
    ViewBag.Title = "Details";
}


<main class="container body-content">
  <div class="clearing"></div>
  <h2 class="titleStyle">Form</h2>

  <div class="detailsTable">
    <dl class="detailsTableDl">
      <dt>
        @Html.DisplayNameFor( model => model.formName )
      </dt>

      <dd>
        @Html.DisplayFor( model => model.formName )
      </dd>
    </dl>
    <dl class="detailsTableDl">
      <dt>
        @Html.DisplayNameFor( model => model.formDescription )
      </dt>

      <dd>
        @Html.DisplayFor( model => model.formDescription )
      </dd>
    </dl>
  </div>
  <div class="actionLinkDiv">
    <div class="buttonAction">
      @Html.ActionLink( "Delete", "DeleteConfirm", new {
        id = Model.formId
      } )
    </div>
    <div class="buttonAction">
      @Html.ActionLink( "Edit", "Edit", new {
        id = Model.formId
      } )
    </div>
  </div>
  <div class="actionLinkDiv">
    @Html.ActionLink( "Forms List", "Index" )
  </div>
</main>